{
  "name": "open-music-player",
  "repository": "git@github.com:ArunMurugan78/open-music-player.git",
  "author": "Arun Murugan <arunmurugan.official@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install": "lerna bootstrap",
    "prebuild": "yarn clean",
    "clean": "lerna run clean",
    "build:all": "lerna run build --stream",
    "build:web": "lerna run build --stream --scope=@open-music-player/{core,web}",
    "dev:web": "lerna run dev --stream --scope=@open-music-player/{core,web,api} --parallel",
    "cypress:open": "cypress open",
    "test-build:web": "http-server packages/web/build & cypress run --headless --browser chrome"
  },
  "devDependencies": {
    "@types/cypress": "^1.1.3",
    "cypress": "^7.4.0",
    "cypress-file-upload": "^5.0.7",
    "http-server": "^0.12.3",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2"
  },
  "volta": {
    "node": "14.17.0",
    "yarn": "1.22.10"
  }
}
